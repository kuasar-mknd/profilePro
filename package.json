{
  "name": "profilepro",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Portfolio professionnel de Samuel Dulex - Spécialiste en création de contenu vidéo et captation d'événements",
  "author": {
    "name": "Samuel Dulex",
    "url": "https://kuasar.xyz"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuasar-mknd/profilePro.git"
  },
  "homepage": "https://kuasar.xyz",
  "keywords": [
    "portfolio",
    "astro",
    "video",
    "photography",
    "content-creation",
    "samuel-dulex"
  ],
  "scripts": {
    "images": "node scripts/optimize-images.js",
    "dev": "bun run images && astro dev",
    "start": "bun run images && astro dev",
    "build": "bun run images && astro build && node scripts/generate-csp.mjs",
    "preview": "bun run images && astro preview",
    "astro": "astro",
    "format": "prettier --write \"src/**/*.{astro,js,jsx,ts,tsx,md,mdx}\"",
    "format:check": "prettier --check \"src/**/*.{astro,js,jsx,ts,tsx,md,mdx}\"",
    "lint": "bun run lint:eslint && bun run lint:stylelint",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "lighthouse": "lhci autorun",
    "analyze": "ANALYZE=true bun run build && open dist/stats.html",
    "check": "bun run format:check && bun run lint && bun run typecheck",
    "typecheck": "astro check",
    "test:e2e": "playwright test",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.7.0",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/outfit": "^5.2.8",
    "@fontsource/space-grotesk": "^5.2.10",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.8",
    "astro-embed": "^0.12.0",
    "astro-icon": "^1.1.5",
    "dateformat": "^5.0.3",
    "glob": "^13.0.0",
    "iconify-icon": "^3.0.2",
    "plyr": "^3.8.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rehype-external-links": "^3.0.0",
    "sanitize-html": "^2.17.0",
    "satori": "^0.18.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@types/bun": "^1.3.6",
    "@types/dateformat": "^5.0.3",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.47.0",
    "astro-compress": "^2.3.9",
    "bun-types": "^1.3.6",
    "cheerio": "^1.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "wrangler": "^4.58.0"
  }
}
