{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "theme",
          "plugin",
          "variant",
          "custom-variant",
          "utility",
          "import"
        ]
      }
    ],
    "no-descending-specificity": null,
    "selector-class-pattern": null,
    "import-notation": "string"
  },
  "ignoreFiles": ["dist/**", "node_modules/**", ".astro/**", "public/**"]
}
