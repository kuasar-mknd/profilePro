---
import { Icon } from "astro-icon/components";

interface Props {
  message: string;
  icon?: string;
  class?: string;
}

const {
  message,
  icon = "mdi:alert-circle-outline",
  class: className = "",
} = Astro.props;
---

<div
  class:list={[
    "w-full py-12 text-center bg-white/50 dark:bg-white/5 rounded-2xl border border-dashed border-pacamara-secondary/20 dark:border-white/10 backdrop-blur-sm",
    className,
  ]}
>
  <Icon
    name={icon}
    class="w-12 h-12 mx-auto text-pacamara-secondary/50 dark:text-white/50 mb-4"
  />
  <p class="text-lg text-pacamara-primary/70 dark:text-white/70 font-outfit">
    {message}
  </p>
</div>
