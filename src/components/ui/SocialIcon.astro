---
import { Icon } from "astro-icon/components";

interface Props {
  socialUrl?: string;
  socialType: string;
}

const { socialUrl = false, socialType } = Astro.props;
const capitalizedType =
  socialType.charAt(0).toUpperCase() + socialType.slice(1);
const label = `Visitez notre page ${capitalizedType} (ouvre un nouvel onglet)`;
---

{
  socialUrl && (
    <li>
      <a
        href={socialUrl}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={label}
        title={label}
        class="group focus:outline-none focus-visible:ring-2 focus-visible:ring-pacamara-accent rounded-md p-1 -m-1"
      >
        <Icon
          name={socialType}
          class="w-auto h-[15px] transition-all duration-300 fill-pacamara-primary/60 group-hover:fill-pacamara-secondary dark:fill-pacamara-accent dark:group-hover:fill-pacamara-secondary group-focus-visible:fill-pacamara-secondary"
          aria-hidden="true"
        />
      </a>
    </li>
  )
}
