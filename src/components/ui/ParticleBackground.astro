---
/**
 * Particle background component that creates floating particles.
 * Optimized for performance with requestAnimationFrame and canvas.
 */
interface Props {
  particleCount?: number;
  color?: string;
  maxSpeed?: number;
  connectDistance?: number;
  class?: string;
}

const {
  particleCount = 50,
  color = "rgba(190, 18, 60, 0.3)",
  maxSpeed = 0.5,
  connectDistance = 120,
  class: className = "",
} = Astro.props;
---

<div
  class:list={[
    "particle-container absolute inset-0 -z-10 overflow-hidden",
    className,
  ]}
  data-particle-count={particleCount}
  data-particle-color={color}
  data-max-speed={maxSpeed}
  data-connect-distance={connectDistance}
>
  <canvas id="particle-canvas" class="w-full h-full"></canvas>
</div>

<style>
  .particle-container {
    opacity: 0.6;
  }

  @media (prefers-reduced-motion: reduce) {
    .particle-container {
      display: none;
    }
  }
</style>

<script>
  interface Particle {
    x: number;
    y: number;
    vx: number;
    vy: number;
    size: number;
  }

  function initParticles() {
    const container = document.querySelector(".particle-container");
    const canvas = document.getElementById(
      "particle-canvas",
    ) as HTMLCanvasElement;

    if (!container || !canvas) return;

    const ctx = canvas.getContext("2d");
    if (!ctx) return;

    // Check for reduced motion preference
    if (window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
      return;
    }

    const particleCount =
      Number(container.getAttribute("data-particle-count")) || 50;
    const color =
      container.getAttribute("data-particle-color") || "rgba(190, 18, 60, 0.3)";
    const maxSpeed = Number(container.getAttribute("data-max-speed")) || 0.5;
    const connectDistance =
      Number(container.getAttribute("data-connect-distance")) || 120;

    let particles: Particle[] = [];
    let animationId: number;
    let width: number;
    let height: number;

    function resize() {
      width = container.clientWidth;
      height = container.clientHeight;
      canvas.width = width;
      canvas.height = height;
    }

    function createParticles() {
      particles = [];
      for (let i = 0; i < particleCount; i++) {
        particles.push({
          x: Math.random() * width,
          y: Math.random() * height,
          vx: (Math.random() - 0.5) * maxSpeed,
          vy: (Math.random() - 0.5) * maxSpeed,
          size: Math.random() * 2 + 1,
        });
      }
    }

    function drawParticles() {
      ctx.clearRect(0, 0, width, height);

      // Draw particles
      particles.forEach((p, i) => {
        // Update position
        p.x += p.vx;
        p.y += p.vy;

        // Bounce off edges
        if (p.x < 0 || p.x > width) p.vx *= -1;
        if (p.y < 0 || p.y > height) p.vy *= -1;

        // Draw particle
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
        ctx.fillStyle = color;
        ctx.fill();

        // Draw connections
        for (let j = i + 1; j < particles.length; j++) {
          const p2 = particles[j];
          const dx = p.x - p2.x;
          const dy = p.y - p2.y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < connectDistance) {
            ctx.beginPath();
            ctx.moveTo(p.x, p.y);
            ctx.lineTo(p2.x, p2.y);
            ctx.strokeStyle = color.replace(
              /[\d.]+\)$/,
              `${(1 - distance / connectDistance) * 0.3})`,
            );
            ctx.lineWidth = 0.5;
            ctx.stroke();
          }
        }
      });

      animationId = requestAnimationFrame(drawParticles);
    }

    // Initialize
    resize();
    createParticles();
    drawParticles();

    // Handle resize
    const resizeObserver = new ResizeObserver(() => {
      resize();
      createParticles();
    });
    resizeObserver.observe(container);

    // Cleanup on page navigation
    document.addEventListener(
      "astro:before-swap",
      () => {
        cancelAnimationFrame(animationId);
        resizeObserver.disconnect();
      },
      { once: true },
    );
  }

  // Initialize
  initParticles();
  document.addEventListener("astro:page-load", initParticles);
</script>
