---
const { postData, num } = Astro.props;
import { Image } from "astro:assets";
import PublishDate from "./PublishDate.astro";
import Tag from "../../ui/Tag.astro";
// default image if no image added
import defaultImage from "../../../assets/default.jpg";

const isOdd = num % 2;
---

<article
  class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-20 hover-scale-sm rounded-3xl p-6 -m-6 transition-colors bg-white/40 dark:bg-pacamara-dark/60 border border-pacamara-secondary/10 dark:border-white/5 shadow-sm hover:shadow-md hover:bg-white/60 dark:hover:bg-pacamara-dark/80"
>
  <div class="order-2 md:order-1">
    <a href={`/project/${postData.slug}`}>
      <Image
        src={postData.data.image}
        alt={postData.data.title}
        width={700}
        height={700}
        class="rounded-2xl object-cover w-full aspect-square md:aspect-4/3"
        transition:name={`project-image-${postData.slug}`}
      />
    </a>
  </div>

  <div class="order-1 md:order-2 flex flex-col justify-center">
    <h2 class="mb-4">
      <a
        href={`/project/${postData.slug}`}
        class="font-pacamara-space font-bold text-2xl md:text-3xl text-pacamara-primary dark:text-white hover:text-pacamara-accent transition-colors duration-300"
      >
        {postData.data.title}
      </a>
    </h2>

    <p
      class="font-outfit text-lg text-pacamara-primary/80 dark:text-white/80 line-clamp-3 mb-6"
    >
      {postData.data.intro}
    </p>

    <div class="flex flex-wrap gap-4 items-center mt-auto">
      <Tag tag={postData.data.tag} />
      <PublishDate date={postData.data.pubDate} />
    </div>
  </div>
</article>
