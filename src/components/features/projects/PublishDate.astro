---
import dateFormat from "dateformat";
const { date } = Astro.props;

// ğŸ¨ Palette: Accessibility Enhancement
// Generate a human-readable date string for screen readers and mouse hover
const readableDate = new Intl.DateTimeFormat("fr-FR", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(date);

const label = `PubliÃ© le ${readableDate}`;
---

<time
  datetime={date.toISOString()}
  class="font-pacamara-space tracking-widest transition-all duration-300 text-[14px] text-inherit"
  aria-label={label}
  title={label}
>
  {dateFormat(date, "dd-mm-yyyy")}
</time>
