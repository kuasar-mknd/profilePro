---
interface Props {
  date: Date;
}

const { date } = Astro.props;

// âš¡ Bolt: Use native Date formatting to remove dateformat dependency (30kb saved)
const day = date.getDate().toString().padStart(2, "0");
const month = (date.getMonth() + 1).toString().padStart(2, "0");
const year = date.getFullYear();
const formattedDate = `${day}-${month}-${year}`;
---

<time
  datetime={date.toISOString()}
  class="font-pacamara-space tracking-widest transition-all duration-300 text-[14px] text-inherit"
>
  {formattedDate}
</time>
