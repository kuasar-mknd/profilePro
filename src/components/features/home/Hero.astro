---
import { Image, Picture } from "astro:assets";
import logo from "../../../assets/logo.avif";
import BackgroundAnimation from "./BackgroundAnimation.astro";

import slide1 from "../../../assets/slide-1.avif";
import slide2 from "../../../assets/slide-2.avif";
import slide3 from "../../../assets/slide-3.avif";
import slide4 from "../../../assets/slide-4.avif";
import slide5 from "../../../assets/slide-5.avif";
---

<section
  class="relative overflow-hidden min-h-[85vh] flex flex-col justify-center items-center pt-20 pb-10"
>
  <!-- Background Glows -->
  <!-- Background Glows -->
  <BackgroundAnimation />

  <div class="container mx-auto px-7 text-center z-10">
    <div class="mb-8">
      <Picture
        src={logo}
        width={360}
        widths={[180, 360]}
        sizes="180px"
        formats={["avif", "webp"]}
        alt="Logo Samuel Dulex"
        class="mx-auto rounded-2xl shadow-glow-accent hover:scale-105 transition-transform duration-500 w-[180px]"
        loading="eager"
        fetchpriority="high"
      />
    </div>

    <h1
      class="font-pacamara-space font-bold text-5xl md:text-7xl lg:text-8xl mb-6 tracking-tight"
    >
      <span
        class="bg-clip-text text-transparent bg-linear-to-r from-white via-pacamara-white to-pacamara-secondary dark:from-white dark:via-pacamara-white dark:to-pacamara-secondary"
      >
        Connecter.
      </span>
      <br class="md:hidden" />
      <span
        class="bg-clip-text text-transparent bg-linear-to-r from-pacamara-secondary via-pacamara-accent to-purple-500"
      >
        Captiver.
      </span>
    </h1>

    <p
      class="text-xl md:text-2xl text-pacamara-primary/80 dark:text-white/80 max-w-2xl mx-auto mb-10 font-outfit font-light animate-slide-up opacity-0"
      style="animation-delay: 0.5s;"
    >
      L'Art de transformer chaque événement en <span
        class="text-pacamara-accent font-semibold">Histoire</span
      >.
    </p>

    <div
      class="flex flex-col md:flex-row gap-4 justify-center items-center animate-slide-up opacity-0"
      style="animation-delay: 0.7s;"
    >
      <a
        href="/project"
        class="group relative px-8 py-4 bg-pacamara-primary dark:bg-white text-white dark:text-pacamara-primary rounded-full font-bold text-lg shadow-lg hover:shadow-glow transition-all duration-300 hover:-translate-y-1 overflow-hidden"
      >
        <span class="relative z-10">Voir mes projets</span>
        <div
          class="absolute inset-0 bg-linear-to-r from-pacamara-secondary to-pacamara-accent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>
      </a>
      <a
        href="#contact-form"
        class="px-8 py-4 bg-pacamara-secondary text-white rounded-full font-bold text-lg shadow-lg hover:shadow-glow hover-lift transition-all duration-300"
      >
        Me contacter
      </a>
    </div>
  </div>

  <!-- Floating Cards / Carousel -->
  <div
    class="w-full mt-20 animate-fade-in opacity-0"
    style="animation-delay: 1s;"
  >
    <div
      class="flex justify-center gap-6 overflow-hidden py-10 mask-linear-gradient"
    >
      <div
        class="relative w-60 md:w-72 aspect-[9/16] flex-none rounded-2xl overflow-hidden shadow-glass -rotate-6 hover:rotate-0 transition-all duration-500 hover:scale-110 hover:z-10"
      >
        <Picture
          src={slide1}
          width={600}
          widths={[240, 288, 480, 576]}
          sizes="(max-width: 768px) 240px, 288px"
          formats={["avif", "webp"]}
          alt=""
          class="object-cover w-full h-full"
        />
      </div>
      <div
        class="relative w-60 md:w-72 aspect-[9/16] flex-none rounded-2xl overflow-hidden shadow-glass -rotate-2 hover:rotate-0 transition-all duration-500 hover:scale-110 hover:z-10 translate-y-10"
      >
        <Picture
          src={slide2}
          width={600}
          widths={[240, 288, 480, 576]}
          sizes="(max-width: 768px) 240px, 288px"
          formats={["avif", "webp"]}
          alt=""
          class="object-cover w-full h-full"
        />
      </div>
      <div
        class="relative w-60 md:w-72 aspect-[9/16] flex-none rounded-2xl overflow-hidden shadow-glass rotate-2 hover:rotate-0 transition-all duration-500 hover:scale-110 hover:z-10"
      >
        <Picture
          src={slide3}
          width={600}
          widths={[240, 288, 480, 576]}
          sizes="(max-width: 768px) 240px, 288px"
          formats={["avif", "webp"]}
          alt=""
          class="object-cover w-full h-full"
        />
      </div>
      <div
        class="relative w-60 md:w-72 aspect-[9/16] flex-none rounded-2xl overflow-hidden shadow-glass rotate-6 hover:rotate-0 transition-all duration-500 hover:scale-110 hover:z-10 translate-y-10"
      >
        <Picture
          src={slide4}
          width={600}
          widths={[240, 288, 480, 576]}
          sizes="(max-width: 768px) 240px, 288px"
          formats={["avif", "webp"]}
          alt=""
          class="object-cover w-full h-full"
        />
      </div>
    </div>
  </div>
</section>
