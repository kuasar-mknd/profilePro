const services = [
  {
    title: "Production Vidéo",
    description:
      "Clips, aftermovies, corporate. Une esthétique cinématographique.",
    icon: "mdi:video-vintage",
    color: "text-purple-500",
  },
  {
    title: "Développement Web",
    description:
      "Applications Fullstack, SaaS & Sites vitrines. Performants et évolutifs.",
    icon: "mdi:code-tags",
    color: "text-blue-500",
  },
  {
    title: "Photographie",
    description:
      "Portraits & événements. Des images qui racontent une histoire.",
    icon: "mdi:camera",
    color: "text-pink-500",
  },
  {
    title: "Stratégie Digitale",
    description: "SEO & Social Ads. Boostez votre visibilité en ligne.",
    icon: "mdi:google-analytics",
    color: "text-orange-500",
  },
