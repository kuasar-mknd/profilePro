---
import { Icon } from "astro-icon/components";
import ScrollReveal from "../../ui/ScrollReveal.astro";
import TiltCard from "../../ui/TiltCard.astro";

const services = [
  {
    title: "Production Vidéo",
    description:
      "Clips, aftermovies, corporate. Une esthétique cinématographique.",
    icon: "mdi:video-vintage",
    color: "text-purple-500",
    gradient: "from-purple-500/20 to-purple-600/10",
  },
  {
    title: "Développement Web",
    description:
      "Applications Fullstack, SaaS & Sites vitrines. Performants et évolutifs.",
    icon: "mdi:code-tags",
    color: "text-blue-500",
    gradient: "from-blue-500/20 to-blue-600/10",
  },
  {
    title: "Photographie",
    description:
      "Portraits & événements. Des images qui racontent une histoire.",
    icon: "mdi:camera",
    color: "text-pink-500",
    gradient: "from-pink-500/20 to-pink-600/10",
  },
  {
    title: "Stratégie Digitale",
    description: "SEO & Social Ads. Boostez votre visibilité en ligne.",
    icon: "mdi:google-analytics",
    color: "text-orange-500",
    gradient: "from-orange-500/20 to-orange-600/10",
  },
];
---

<section
  aria-labelledby="services-title"
  class="services-section py-24 relative overflow-hidden"
  style="content-visibility: auto; contain-intrinsic-size: auto 600px;"
>
  <!-- ⚡ Bolt: content-visibility: auto skips rendering off-screen content -->
  <!-- Animated background gradient -->
  <div class="absolute inset-0 -z-10 opacity-30 dark:opacity-20">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-pacamara-secondary/30 rounded-full blur-3xl floating"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-pacamara-accent/30 rounded-full blur-3xl floating-slow floating-delayed"
    >
    </div>
  </div>

  <div class="container mx-auto px-7 relative z-10">
    <ScrollReveal class="text-center max-w-3xl mx-auto mb-16">
      <h2
        id="services-title"
        class="text-3xl md:text-5xl font-pacamara-space font-bold mb-6 text-pacamara-dark dark:text-white"
      >
        Mes <span class="text-shimmer">Expertises</span>
      </h2>
      <p
        class="text-lg md:text-xl text-pacamara-primary/70 dark:text-white/70 font-outfit"
      >
        Une approche globale pour votre communication visuelle et digitale.
      </p>
    </ScrollReveal>

    <ul
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 list-none p-0 contain-layout-paint"
    >
      {
        services.map((service, index) => (
          <li class="h-full service-item">
            <ScrollReveal delay={0.1 * index} class="h-full">
              <TiltCard
                class={`h-full bg-white dark:bg-pacamara-dark/80 border border-pacamara-secondary/10 dark:border-white/5 rounded-2xl p-6 shadow-sm card-glow group transition-all duration-300 cursor-default`}
              >
                <div
                  class={`absolute inset-0 bg-linear-to-br ${service.gradient} opacity-50 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl`}
                />
                <div class="relative z-10">
                  <div
                    class={`w-16 h-16 rounded-2xl flex items-center justify-center mb-6 ${service.color} bg-current/10 group-hover:scale-110 transition-transform duration-300`}
                  >
                    <Icon
                      name={service.icon}
                      class="w-8 h-8 icon-animate"
                      aria-hidden="true"
                    />
                  </div>
                  <h3 class="text-xl font-bold font-pacamara-space mb-3 text-pacamara-dark dark:text-white">
                    {service.title}
                  </h3>
                  <p class="text-sm text-pacamara-primary/70 dark:text-white/70 font-outfit leading-relaxed">
                    {service.description}
                  </p>
                </div>
              </TiltCard>
            </ScrollReveal>
          </li>
        ))
      }
    </ul>

    <ScrollReveal delay={0.5} class="text-center mt-12">
      <a
        href="/about"
        class="inline-flex items-center gap-2 text-pacamara-accent font-bold hover:gap-4 transition-all duration-300 group focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-pacamara-accent rounded-lg p-2 -m-2"
      >
        <span>Découvrir mon parcours complet</span>
        <Icon
          name="mdi:arrow-right"
          class="w-5 h-5 group-hover:translate-x-1 transition-transform"
        />
      </a>
    </ScrollReveal>
  </div>
</section>

<style>
  /* ⚡ Bolt: Mobile Rendering Optimization
     Skip rendering off-screen service items on mobile to improve scrolling performance.
  */
  @media (max-width: 768px) {
    .service-item {
      content-visibility: auto;
      contain-intrinsic-size: auto 300px; /* Approximate height of card */
    }
  }
</style>
